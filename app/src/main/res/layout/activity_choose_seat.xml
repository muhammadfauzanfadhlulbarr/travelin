<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout.ChooseSeat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="160dp"
                android:layout_height="72dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Select Your Favorite Seat"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bandung"
                android:textColor="@color/GreyColor"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/rectangle_10" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Available"
                    android:textAlignment="gravity" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/rectangle_11" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Selected"
                    android:textAlignment="gravity" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/background_unavailable" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Unavailable"
                    android:textAlignment="gravity" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_layout"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingTop="30dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="30dp"
                    app:columnCount="5"

                    app:orientation="horizontal"
                    app:rowCount="6">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="A"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:text="B"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="C"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:text="D"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/a1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/b1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <TextView
                        android:id="@+id/TextView38"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:text="1"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/c1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/d1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:text="2"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:srcCompat="@drawable/background_available" />

                    <TextView
                        android:id="@+id/textView40"
